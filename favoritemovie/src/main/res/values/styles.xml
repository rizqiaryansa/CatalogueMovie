<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnRed" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@android:color/holo_red_light</item>
        <item name="background">@android:color/holo_red_dark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AllWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AllPaddingVerticalBottom">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
    </style>

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AllMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LyPaddingWithMP" parent="AllMatchParent">
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LyResult" parent="MatchParentWrapContent">
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ViewDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_layout_height</item>
        <item name="android:layout_marginTop">@dimen/view_layout_marginTop</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="ViewDividerDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/view_layout_height</item>
        <item name="android:layout_marginTop">@dimen/view_layout_marginTop</item>
        <item name="android:background">@color/background_divider</item>
    </style>

    <style name="ProgressBar" parent="AllWrapContent">
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TvResult" parent="AllWrapContent">
        <item name="android:text">@string/movies_now_playing</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>


</resources>
